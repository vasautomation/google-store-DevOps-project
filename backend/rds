-------------------------------------------------------------lambda-------------------------------------------------

import json
import pymysql
import boto3
from datetime import datetime

# ---------------- MySQL CONFIG ----------------
DB_HOST = "computers.cjy48iyci4zm.ap-northeast-1.rds.amazonaws.com"
DB_USER = "admin"
DB_PASSWORD = "Cloud1234"
DB_NAME = "computers"

# ---------------- S3 CONFIG ----------------
S3_BUCKET = "google-shop-uploads"
S3_KEY_PREFIX = "rds-backups/"  # folder in S3

# ---------------- CONNECT TO RDS ----------------
def get_connection():
    return pymysql.connect(
        host=DB_HOST,
        user=DB_USER,
        password=DB_PASSWORD,
        database=DB_NAME,
        cursorclass=pymysql.cursors.DictCursor
    )

# ---------------- LAMBDA HANDLER ----------------
def lambda_handler(event, context):
    try:
        # Connect to RDS
        conn = get_connection()
        cursor = conn.cursor()

        # Fetch data from receipts table
        cursor.execute("SELECT * FROM receipts")
        rows = cursor.fetchall()

        cursor.close()
        conn.close()

        # Convert data to JSON
        json_data = json.dumps(rows, default=str, indent=2)

        # Upload JSON to S3
        s3 = boto3.client("s3")
        timestamp = datetime.utcnow().strftime("%Y%m%d_%H%M%S")
        s3_key = f"{S3_KEY_PREFIX}receipts_{timestamp}.json"

        s3.put_object(
            Bucket=S3_BUCKET,
            Key=s3_key,
            Body=json_data,
            ContentType="application/json"
        )

        return {
            "statusCode": 200,
            "body": json.dumps({
                "message": f"Data uploaded to S3 successfully: {s3_key}",
                "records_fetched": len(rows)
            })
        }

    except Exception as e:
        return {
            "statusCode": 500,
            "body": json.dumps({"error": str(e)})
        }

