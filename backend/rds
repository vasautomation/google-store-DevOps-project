from flask import Flask, request, jsonify
from flask_cors import CORS
import pymysql
import os
from datetime import datetime

app = Flask(__name__)
CORS(app)

# -------------------------
# MySQL CONFIGURATION (YOUR DETAILS)
# -------------------------
db = {
    "host": "database-1.co7gq0umseaq.us-east-1.rds.amazonaws.com",    # ==> your host
    "user": "admin",
    "password": "Vaseem123456",
    "database": "" # ===> your db
}

# -------------------------
# MySQL CONNECT FUNCTION
# -------------------------
def get_connection():
    return pymysql.connect(
        host=db["host"],
        user=db["user"],
        password=db["password"],
        database=db["database"],
        cursorclass=pymysql.cursors.DictCursor
    )


# ============================================================
#  SAVE RECEIPT (FROM FRONTEND)
# ============================================================
@app.route("/save-receipts", methods=["POST"])
def save_receipt():
    try:
        data = request.get_json()

        filename = data.get("filename")
        mobile = data.get("mobile")
        content = data.get("receipt_text")

        if not filename or not content:
            return jsonify({"error": "Filename and receipt_text are required"}), 400

        # Calculate file size (in KB)
        size_kb = round(len(content.encode("utf-8")) / 1024, 2)

        conn = get_connection()
        cursor = conn.cursor()

        sql = """
            INSERT INTO receipts (filename, mobile, content, size_kb, created_at)
            VALUES (%s, %s, %s, %s, NOW())
        """

        cursor.execute(sql, (filename, mobile, content, size_kb))
        conn.commit()

        cursor.close()
        conn.close()

        return jsonify({
            "status": "success",
            "message": "Receipt saved",
            "filename": filename,
            "mobile": mobile,
            "size_kb": size_kb
        })

    except Exception as e:
        return jsonify({"error": str(e)}), 500


# ============================================================
#  HOME ENDPOINT
# ============================================================
@app.route("/", methods=["GET"])
def home():
    return "Receipt API Running on Port 5001"


# ============================================================
#  START SERVER
# ============================================================
if __name__ == "__main__":
    app.run(host="0.0.0.0", port= , debug=True)   # =>  your port





------------------------------------------  your sql ---------------------------------------



DROP TABLE IF EXISTS receipts;

CREATE TABLE receipts (
    id INT AUTO_INCREMENT PRIMARY KEY,
    filename VARCHAR(255),
    mobile VARCHAR(20),
    content LONGTEXT,
    size_kb DECIMAL(10,2),
    created_at DATETIME
);




